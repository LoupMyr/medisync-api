generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  password   String       @db.VarChar(255)
  pseudo     String?
  medicament Medicament[]
  pilulier   Pilulier[]
}

model Medicament {
  id                     Int                      @id @default(autoincrement())
  nom                    String
  dateExpiration         DateTime
  description            String
  stockDisponible        Int
  dosage                 Int
  limite                 Int
  forme_pharmacotique    String
  avecOrdonnance         Boolean
  User                   User                     @relation(fields: [userId], references: [id])
  userId                 Int
  Image                  Image[]
  EffetSecondaires       EffetSecondaire[]
  MedicamentJourPilulier MedicamentJourPilulier[]
}

model Image {
  id            Int         @id @default(autoincrement())
  nomOriginal   String
  Cheminfichier String
  size          Float?
  Medicament    Medicament? @relation(fields: [medicamentId], references: [id])
  medicamentId  Int?
}

model Pilulier {
  id                    Int                      @id @default(autoincrement())
  nom                   String
  User                  User?                    @relation(fields: [userId], references: [id])
  userId                Int?
  PilulierMomentJournee MedicamentJourPilulier[]
}

model MedicamentJourPilulier {
  id               Int            @id @default(autoincrement())
  Medicament       Medicament?    @relation(fields: [medicamentId], references: [id])
  medicamentId     Int?
  jour             Jour?          @relation(fields: [jour_id], references: [id])
  jour_id          Int
  Pilulier         Pilulier?      @relation(fields: [pilulierId], references: [id])
  pilulierId       Int?
  MomentJournee    MomentJournee? @relation(fields: [MomentJournee_id], references: [id])
  MomentJournee_id Int
  quantite         Int?
  EstPris          Boolean?
}

model Jour {
  id           Int                      @id @default(autoincrement())
  nom          String
  PilulierJour MedicamentJourPilulier[]
}

model MomentJournee {
  id                     Int                      @id @default(autoincrement())
  nom                    String
  MedicamentJourPilulier MedicamentJourPilulier[]
}

model EffetSecondaire {
  id           Int         @id @default(autoincrement())
  nom          String
  description  String
  Medicament   Medicament? @relation(fields: [medicamentId], references: [id])
  medicamentId Int?
}
